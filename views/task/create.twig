{% extends 'layout.twig'%}

{% block content %}

    {% include 'blocks/create_preview.twig' %}

    <div class="form-container flex-column">
        <form class="form-horizontal" action="" method="POST" enctype="multipart/form-data">
            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}
            {% if success %}
                <div class="alert alert-success">{{ success }}</div>
            {% endif %}
            <div class="message"></div>
            <div class="form-group">
                <div></div>
                <label for="crName" class="col-sm-2 control-label">Имя</label>
                <div class="col-sm-10">
                    <input type="text" data-field="name" class="form-control" name="name" id="crName" placeholder="Имя пользователя" value="{{ name }}">
                </div>
            </div>
            <div class="form-group">
                <label for="crText" class="col-sm-2 control-label">Задача</label>
                <div class="col-sm-10">
                    <textarea rows='5' class="form-control" name="text" id="crText" placeholder="Текст задачи">{{ text }}</textarea>
                </div>
            </div>

            <input type="hidden" name="status" value="Не выполнено">

            <div class="form-group">
                <label for="pic" class="col-sm-2 control-label">Картинка</label>
                <div class="col-sm-10">
                    <input class="preview_input" id="pic" type="file" name="pic">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-primary show_preview" name="show_preview" id="">Предварительный просмотр</button>
                    <button type="submit" class="btn btn-default" name="create">Создать задачу</button>
                </div>

            </div>
        </form>
    </div>
{% endblock %}

